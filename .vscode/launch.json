{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Current Rust File (rustc)",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}",
            "preLaunchTask": "rust: build current file"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Cargo Project",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path",
                    "${fileDirname}/Cargo.toml"
                ]
            },
            "args": [],
            "cwd": "${fileDirname}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run Cargo Project",
            "cargo": {
                "args": [
                    "run",
                    "--manifest-path",
                    "${fileDirname}/Cargo.toml"
                ]
            },
            "args": [],
            "cwd": "${fileDirname}"
        }
    ]
}