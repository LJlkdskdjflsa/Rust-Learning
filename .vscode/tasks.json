{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: build current file",
            "type": "shell",
            "command": "rustc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "rust: run current file",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "dependsOn": "rust: build current file",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "cargo: build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path",
                "${fileDirname}/Cargo.toml"
            ],
            "problemMatcher": ["$rustc"],
            "group": "build"
        },
        {
            "label": "cargo: run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--manifest-path",
                "${fileDirname}/Cargo.toml"
            ],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}